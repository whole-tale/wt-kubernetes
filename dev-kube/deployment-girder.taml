apiVersion: apps/v1
kind: Deployment
metadata:
  name: girder
  labels:
    app: WholeTale
spec:
  selector:
    matchLabels:
      app: WholeTale
      tier: frontend
      component: girder
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: WholeTale
        tier: frontend
        component: girder
    spec:
      containers:
      - image: ${GIRDER_IMAGE}
        name: wt-girder
        command: ["/bin/bash"]
        args: ["/usr/local/bin/k8s-entrypoint.sh", "girder", "serve"]
        env:
        - name: DOMAIN
          value: local.wholetale.org
        - name: DEPLOY_DEV_BRANCHES
          value: ${DEPLOY_DEV_BRANCHES}
        ports:
        - containerPort: 80
          name: wt-girder
        volumeMounts:
        - name: wt-ps
          mountPath: /tmp/ps
        - name: girder-config
          mountPath: /girder/girder/conf/girder.local.cfg
          subPath: girder.local.cfg
        - name: girder-config
          mountPath: /girder/start
          subPath: start
        - name: girder-config
          mountPath: /usr/local/bin/k8s-entrypoint.sh
          subPath: k8s-entrypoint.sh
      volumes:
      - name: girder-config
        configMap:
          name: girder-configmap
      - name: wt-ps
        persistentVolumeClaim:
          claimName: girder-ps-volume-claim

