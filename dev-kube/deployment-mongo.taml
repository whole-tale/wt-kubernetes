apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo
  labels:
    app: WholeTale
spec:
  selector:
    matchLabels:
      app: WholeTale
      tier: database
      component: mongo
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: WholeTale
        tier: database
        component: mongo
    spec:
      containers:
      - image: ${MONGO_IMAGE}
        name: mongodb
        ports:
        - containerPort: 27017
          name: mongo
        volumeMounts:
        - name: mongo
          mountPath: /data
      volumes:
      - name: mongo
        persistentVolumeClaim:
          claimName: mongo-volume-claim
